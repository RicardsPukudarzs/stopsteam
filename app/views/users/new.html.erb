<div class="background"> 
  <div class="register-box">
    <div class="flex mb-6">
      <%= link_to 'Log in', login_path, class: 'flex-1 py-2 text-center font-bold border-b-2 cursor-pointer' %>
      <%= link_to 'Register', register_path, class: 'flex-1 py-2 text-center font-bold border-b-2 border-blue-500 cursor-pointer' %>
    </div>
    <%= form_with model: User.new, url: register_path, local: true do |form| %>
      <div>
        <%= form.label :username %>
        <%= form.text_field :username, class: "input-box", autocomplete: "off" %>
      </div>
      <div>
        <%= form.label :email %>
        <%= form.email_field :email, class: "input-box", autocomplete: "new-email" %>
      </div>
      <div>
        <%= form.label :password %>
        <%= form.password_field :password, class: "input-box", autocomplete: "new-password" %>
      </div>
      <div>
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, class: "input-box", autocomplete: "new-password" %>
      </div>
      <div>
        <%= form.submit "Register", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>