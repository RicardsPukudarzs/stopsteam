<div class="steam-user-info">
    <div class="steam-user-info-header">
        <img src="<%= @steam_user_profile_image_url.presence || 'Private' %>" alt="Steam Avatar" class="steam-avatar">

        <div class="steam-info-columns">
            <div class="steam-info-labels">
                <p>Name:</p>
                <p>Level:</p>
                <p>Last Log Off:</p>
                <p>Country:</p>
                <p>Date Created:</p>
            </div>

            <div class="steam-info-values">
                <p><%= @steam_user_name.presence || "Private" %></p>
                <p><%= @steam_user_level.presence || "Private" %></p>
                <p>
                  <% if @steam_user_last_log_off.present? %>
                    <%= Time.at(@steam_user_last_log_off).strftime("%B %d, %Y") %>
                  <% else %>
                    Private
                  <% end %>
                </p>
                <p><%= @steam_user_country.presence || "Private" %></p>
                <p>
                  <% if @steam_user_time_created.present? %>
                    <%= Time.at(@steam_user_time_created).strftime("%B %d, %Y") %>
                  <% else %>
                    Private
                  <% end %>
                </p>
            </div>
        </div>
    </div>

    <hr class="steam-divider">

    <div class="steam-user-stats">
        <div class="steam-stats-columns">
            <div class="steam-stats-labels">
                <p>Games Owned:</p>
                <p>Total Playtime Hours:</p>
            </div>

            <div class="steam-stats-values">
                <p><%= @games_owned.presence || "Private" %></p>
                <p><%= @total_playtime_hours.presence || "Private" %></p>
            </div>
        </div>
    </div>
</div>